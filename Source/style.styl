// fa-regular-400.ttf
@font-face 
	font-family 'fa'
	src url('font/fontawesome-webfont.woff2')
	font-weight normal
	font-style normal
@font-face 
	font-family 'fl'
	src url('font/fl-chapps.woff')
	font-weight normal
	font-style normal
.fa
	font-family 'fa'
	-webkit-font-smoothing antialiased
	display inline-block
	font-style normal
	font-variant normal
	text-rendering auto
	line-height 1
.fl:after
	font-family 'fl'
	font-size 1.125rem
	font-weight 400
.fl
	font-family 'fl'
	-webkit-font-smoothing antialiased
	display inline-block
	font-style normal
	font-variant normal
	text-rendering auto
	line-height 1
.db
	display block

body
	color #999

header
	align-items center
	
.logo
	height 40px
	
.m20-0
	margin 20px 0

.item_menu
	display flex
	position relative
	margin-left 1.875rem
	font-weight 700
	font-size .8rem
	font-family Arimo, sans-serif
	white-space nowrap

.item_menu:hover
	color #000000
	cursor pointer
	
.item_menu:first-child
	margin-left 0

.item_menu:hover .megaMenu
	visibility visible
	opacity 1

.megaMenu
	box-sizing border-box
	visibility hidden
	position absolute
	opacity .2	
	left 0
	top 100%
	margin-top 20px
	// padding 30px
	transition all .3s ease-in-out
	background #ffffff
	box-shadow 0px 10px 30px 0px rgba(80,80,80,0.4)

.col_megaMenu
	min-width 120px
	h5
		color #bbb
		font-size 12px
	a
		text-decoration none

.col_megaMenu_img
	height 100%
	overflow hidden
	
.item_menu:hover .angle-up
	color #000
	transform rotate(-180deg)
	
.item_megaMenu:hover .angle-up-right
	color #000
	transform translateX(4px) rotate(-90deg)

.angle-up
	display inline-block
	transform-origin center
	transition all .3s ease-in-out
	margin 0 0 0 1em
	transform rotate(0deg)

.angle-up-right
	display inline-block
	transform-origin center
	transition all .3s ease-in-out
	margin 0 0 0 1em
	transform translateX(0px) rotate(-90deg)

.angle-up:after
	content "\F107"
	font-family 'fa'

.angle-up-right:after
	content "\F107"
	font-family 'fa'

.icon_user:after
	content "\E01C"
.icon_loop:after
	content "\E014"
.icon_love:after
	content "\E00B"
.icon_shop:after
	content "\E00A"
	
.fl:hover
	color #ea917d
	
.item_megaMenu
	display block
	margin 5px 0
	padding 3px 70px 3px 30px
	font-weight 400
	color #888
	transition all .3s ease-in-out
	box-sizing border-box
.item_megaMenu:last-child
	margin-bottom 30px
.item_megaMenu:first-child
	margin-top 30px
.item_megaMenu:hover
	color #ea917d


.See:hover .wrap_megaMenuLvl3
	visibility visible
	opacity 1

.wrap_megaMenuLvl2
	width 100%

.wrap_megaMenuLvl3
	width 100%
	visibility hidden
	opacity .2
	position absolute
	left 99%
	top 0
	box-sizing border-box
	margin-left 7px
	background #fff
	transition all .3s ease-in-out
	box-shadow 0px 10px 30px 0px rgba(80,80,80,0.4)

.pos-r
	position relative
.m-0
	margin 0

.fullBgImg
	background-image url('img/bg1.jpg')
	background-position top
	background-repeat no-repeat
	background-size cover

.category-description
	padding 8rem 1rem 11rem 1rem
	width 55%
	color #fff
	p
		margin-top: 1.5rem
		line-height 1.8rem

.body
	display flex
	padding-top 5rem

